<Window x:Class="WpfApp1.WinAgent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="WinAgent" Height="450" Width="800">
    <Grid>
        <Label Content="id" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="38,64,0,0" Width="37"/>
        <Label Content="Фамилия" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="37,109,0,0" Width="64"/>
        <Label Content="Имя" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="39,150,0,0" Width="37"/>
        <Label Content="Отчество" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="38,191,0,0" Width="67"/>
        <Label Content="Доля от комиссии" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="41,236,0,0" Width="112"/>
        <TextBox x:Name="TBidAgent" HorizontalAlignment="Left" Height="23" Margin="222,66,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="TBlastAgent" HorizontalAlignment="Left" Height="23" Margin="222,109,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
