        <Button x:Name="ButtonBack" Content="Назад" HorizontalAlignment="Left" Margin="178,357,0,0" VerticalAlignment="Top" Width="75" Click="ButtonBack_Click" Height="24"/>
        <Label x:Name="LabelAdd" Content="Добавить агента" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="291,6,0,0" FontSize="24"/>
        <Image Margin="12,8,664,364" Source="cf34ad99-a56d-42d1-b86f-b628a4de67c2.jpg" Stretch="Fill"/>

    </Grid>
</Window>
